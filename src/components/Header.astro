---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import MobileMenu from '@/components/ui/mobile-menu'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/cvtic-logo.png'
---

<header
  class="bg-background/50 sticky top-0 z-10 backdrop-blur-md"
  transition:persist
>
  <div
    class="mx-auto flex max-w-3xl flex-wrap items-center justify-between gap-4 border-b px-4 py-3 sm:border-none"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <span class="relative inline-block" style="aspect-ratio:2/1; height:1.5rem; min-width:3rem;">
        <Image
          src={logo}
          alt="Logo"
          class="object-contain w-full h-full dark:block hidden"
          style="aspect-ratio:2/1;"
        />
        <Image
          src={logo}
          alt="Logo"
          class="object-contain w-full h-full dark:hidden"
          style="aspect-ratio:2/1; filter: invert(1);"
        />
      </span>
      <span class="h-full text-lg font-medium">{SITE.title}</span>
    </Link>
    <div class="flex items-center sm:gap-4">
      <nav class="hidden items-center gap-4 text-sm sm:flex sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground/80 capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <MobileMenu client:load transition:persist />
      <ThemeToggle transition:persist />
    </div>
  </div>
</header>

<style>
  /* No need for --logo-invert variable anymore, handled by class switching */
</style>
